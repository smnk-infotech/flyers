rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function userRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    match /users/{uid} {
      allow read: if request.auth != null && (uid == request.auth.uid || userRole() == 'admin');
      allow create: if request.auth != null && uid == request.auth.uid;
      allow update, delete: if request.auth != null && (uid == request.auth.uid || userRole() == 'admin');
    }

    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && userRole() in ['admin'];
    }
  }
}
